<% layout("/layouts/boilerplate2") -%>
<div class="mt-4">
<h1>Welcome  <%= currUser.username %> </h1>
<% if(bookings.length<=0){ %>
   
    
    <p><i class="fa-regular fa-face-frown"></i>
        &nbsp; You don’t have any guests .</p>
        <a href="/listings/new"><button class=" btn btn-dark add-btn mt-3 mb-3">Create listing</button></a>
    <hr>
    <p>Can’t find your reservation here?
        <a href="/help">Visit the Help Centre</a>
        </p>
    
<% }else { %>
<h3>Your reservations</h3>
<hr>
<table class="table table-striped table-hover" >
    <thead>
        <tr >
            <th>User Name</th>
            <th>Email</th>
             <th>Listing Name</th>
           <th>start_time</th>
             <th>end_time</th>
            <th>Status</th> 
        </tr>
    </thead>
    <tbody >
        <% bookings.forEach(booking => { %>
            <tr>
                <td><%= booking.user.username %></td>
                <td><%= booking.user.email %></td>
                <td><%= booking.listing.title %></td>
                <td><%= new Date(booking.start_time).toLocaleDateString('en-GB') %></td>
                <td><%= new Date(booking.end_time).toLocaleDateString('en-GB') %></td>
                <td><%= booking.status %></td>
            </tr>
       <%  }); %>
    </tbody>
</table>
<% } %>
</div>